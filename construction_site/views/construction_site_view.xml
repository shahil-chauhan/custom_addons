<odoo>
    <record id="construction_site_tree_view" model="ir.ui.view">
        <field name="name">construction site tree view</field>
        <field name="model">construction.site</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="reference" string="Construction Site Code"/>
                <field name="delivery_address" string="Delivery Address"/>
                <field name="responsible_internal_id" string="Internal Responsible"/>
                <field name="responsible_on_site_id" string="On Site Responsible"/>
                <field name="schedule_date" string="Material Requirement Date"/>
            </tree>
        </field>
    </record>

    <record id="construction_site_form_view" model="ir.ui.view">
        <field name="name">construction site form view</field>
        <field name="model">construction.site</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_run" name="action_run" string="Running" type="object" class="btn-success"
                            states="draft"/>
                    <button id="button_stop" name="action_stop" string="Stop" type="object" class="btn-danger"
                            states="running"/>
                    <button id="button_in_close" name="action_in_close" string="In Closing" type="object"
                            class="btn-warning" states="stop"/>
                    <button id="button_close" name="action_close" string="Close" type="object" class="btn-secondary"
                            states="in_closing"/>
                    <button id="button_draft" name="action_draft" string="Draft" type="object" class="btn-primary"
                            states="close"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,close,running,in_closing,stop"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="delivery_address" string="Delivery Address"/>
                            <field name="responsible_internal_id" string="Internal Responsible"/>
                            <field name="responsible_on_site_id" string="On Site Responsible"/>
                        </group>
                        <group>
                            <field name="schedule_date" string="Material Requirement Date"/>
                            <field name="reference" string="Construction Site Code" placeholder="Code"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_construction_site" model="ir.actions.act_window">
        <field name="name">Construction Site</field>
        <field name="res_model">construction.site</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="construction_site_root_menu" name="Construction Site" action="action_construction_site"/>
</odoo>