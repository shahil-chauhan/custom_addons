<odoo>
    <template id="product_item_template" name="Product Item">
        <t t-call="website.layout">
            <t t-set="title">Product item</t>
            <div class="oe_structure product_diplapy">
                <t t-foreach="product_item" t-as="product">
                    <div class="row">
                        <div class="image_position col-md-6 col-xl-8">
                            <img t-att-src="'/web/image/product.template/%s/image_1920' % product.id" class=" product_image_show"/>
                        </div>
                        <div class="col-md-6 col-xl-4">
                            <h1 >
                                <strong>
                                    <t t-esc="product.name"/>
                                </strong>
                            </h1>
                            <h4 style="color:red;">
                                <span t-esc="product.list_price" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                            </h4>
                            <!-- <h4>
                                <ul>
                                    <li >
                                        <strong name="heading">Varients:</strong>
                                        <ul>
                                            <t t-foreach="product.attribute_line_ids" t-as="line" name="varient">
                                                <t t-esc="line.attribute_id.name"/>
                                                <li t-foreach="line.value_ids" t-as="values">
                                                    <ul>
                                                        <t t-esc="values.name"/>

                                                    </ul>
                                                </li>
                                            </t>
                                        </ul>
                                    </li>
                                </ul>
                            </h4> -->
                            <div>
                                <div>
                                    <strong>Varients:</strong>
                                </div>
                                <span t-foreach="product.attribute_line_ids" t-as="line" name="varient">
                                    <div>
                                        <t t-esc="line.attribute_id.name"/>
                                        <div>
                                            <span t-foreach="line.value_ids" t-as="values">
                                                &#160;<input type="radio" name="varient"/>&#160;&#160;
                                                <t t-esc="values.name"/>
                                            </span>
                                        </div>
                                        <br/>
                                    </div>
                                </span>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
