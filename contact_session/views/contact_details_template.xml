<odoo>
    <template id="contact_details" name="Contact Detail">
        <t t-call="website.layout">
            <t t-set="title">Contact Detail</t>
            <div class="oe_structure">
                <header>
                    <a t-attf-href="/contact_form">
                        <button class="btn btn-primary">Form
                            Contact
                        </button>
                    </a>
                </header>
                <div class="container">
                    <div class="contact_main_wrapper">
                        <div class="contact_details_wrapper">
                            <div class="contact_details_data_wrapper_outer">
                                <div class="contact_name">
                                    <t t-esc="contact_details.name"/>
                                </div>
                                <div class="contact_details_data_wrapper_inner">
                                    <div class="contact_email_phone_wrapper">
                                        <div class="contact_email">
                                            <label>Email:&#160;&#160;</label>
                                            <t t-esc="contact_details.email"/>
                                        </div>
                                        <div class="contact_phone">
                                            <label>Phone:&#160;&#160;</label>
                                            <t t-esc="contact_details.phone"/>
                                        </div>
                                    </div>
                                    <div class="contact_address_wrapper">
                                        <label>Address:&#160;&#160;</label>
                                        <div class="contact_address_details">
                                            <t t-esc="contact_details.street"/>
                                            ,
                                            <t t-esc="contact_details.city"/>
                                            ,
                                            <br/>
                                            <t t-esc="contact_details.state_id.name"/>
                                            ,
                                            <t t-esc="contact_details.zip"/>
                                            ,
                                            <br/>
                                            <t t-esc="contact_details.country_id.name"/>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="contact_details_img_wrapper">
                                <div class="contact_img_wrapper">
                                    <img t-att-src="'/web/image/res.partner/%s/image_1920' % contact_details.id"
                                         class="contact_img"/>
                                </div>
                            </div>
                        </div>
                        <t t-if="contact_details.team_lead">
                            <div class="contact_member_tbl">
                                <label>Team Members:</label>
                                <table class="table">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Phone</th>
                                            <th>Email</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="contact_details.team_lead_ids" t-as="members">
                                            <tr>
                                                <td>
                                                    <t t-esc="members.id"/>
                                                </td>
                                                <td>
                                                    <t t-esc="members.name"/>
                                                </td>
                                                <td>
                                                    <t t-esc="members.phone"/>
                                                </td>
                                                <td>
                                                    <t t-esc="members.email"/>
                                                </td>

                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>


